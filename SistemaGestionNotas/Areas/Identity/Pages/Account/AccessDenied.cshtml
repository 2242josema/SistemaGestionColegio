@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded">

                @* Encabezado de la tarjeta con estilo de error *@
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]</h2>
                </div>

                <div class="card-body text-center">
                    @* Icono principal mejorado y estilizado *@
                    <i class="fas fa-ban fa-5x text-danger mb-4 mt-2"></i>

                    <p class="lead text-muted">No tienes los permisos necesarios para acceder a este recurso.</p>

                    <hr class="my-4">

                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Ir a la Página de Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>