        @page
        @model LoginModel

        @{
            Layout = "~/Views/Shared/LayoutLoginOrRegister.cshtml";
            ViewData["Title"] = "Iniciar sesión";
        }



        <h1>@ViewData["Title"]</h1>
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="account" method="post">

                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                    <input asp-for="Input.UserNameOrEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                    <label asp-for="Input.UserNameOrEmail" class="form-label">Correo electrónico</label>
                    <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="contraseña" />
                            <label asp-for="Input.Password" class="form-label">Contraseña</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar sesión</button>
                        </div>

