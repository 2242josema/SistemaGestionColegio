@model SistemaGestionNotas.Models.ViewModels.CursoInscripcionesDetailsViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Listado de Alumnos - @Model.NombreCurso</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

    <style>
        body {
            padding: 20px;
            font-family: Arial, sans-serif;
            color: #333;
        }

        .report-header {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-bottom: 25px;
            padding-bottom: 15px;
            position: relative;
        }

            .report-header .text-container {
                flex-grow: 1;
                text-align: center;
               
                transform: translateX(-90px);
            }

        .report-logo {
            width: 180px; 
            height: auto;
            position: absolute;
            left: 0;
            top: 0;
        }

        .report-header h1 {
            font-size: 2.5rem;
            margin: 0;
            font-weight: 300;
        }

        .report-header h4 {
            font-size: 1.5rem;
            color: #555;
            font-weight: 300;
        }

        .course-info {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f8f9fa;
            border-left: 5px solid #1abc9c;
        }

        .table thead th {
            background-color: #1abc9c;
            color: white;
            border-color: #1abc9c;
            font-weight: normal;
        }

        .table > tbody > tr:nth-of-type(odd) > * {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .table > tbody > tr > td {
            border-style: none;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 0.8em;
            color: #777;
        }
    </style>
</head>
<body>

    <div id="pdf-content">

        <div class="report-header">
            <img src="@Url.Content("~/images/logotransparenteblack.png")" alt="Logo Universidad" class="report-logo" />

            <div class="text-container">
                <h1>Universidad Tech</h1>
                <h4>Reporte de Inscripciones</h4>
            </div>
        </div>

        <div class="course-info">
            <h5><strong>Curso:</strong> @Model.NombreCurso</h5>
            <p class="mb-0"><strong>Código:</strong> @Model.CodigoCurso | <strong>Sección:</strong> @Model.Seccion</p>
        </div>

        @if (Model.AlumnosInscritos.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Carné del Alumno</th>
                        <th>Nombre Completo del Alumno</th>
                        <th>Fecha de Inscripción al Curso</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int contador = 1;
                    }
                    @foreach (var inscripcion in Model.AlumnosInscritos)
                    {
                        <tr>
                            <td>@(contador++)</td>
                            <td>@inscripcion.Alumno.Codigo</td>
                            <td>@inscripcion.Alumno.Nombre</td>
                            <td>@inscripcion.FechaInscripcion.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning text-center">No hay alumnos inscritos en este curso.</div>
        }

        <div class="footer">
            Reporte generado el @DateTime.Now.ToString("dd/MM/yyyy 'a las' HH:mm")
        </div>
    </div>

    <script>
        window.onload = function() {
            const element = document.getElementById('pdf-content');
            const options = {
                margin: 0.5,
                filename: 'Reporte_Inscripciones_@Model.NombreCurso.Replace(" ", "_").ToLower()' + '.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: {
                    scale: 2,
                    useCORS: true,
                    letterRendering: true
                },
                jsPDF: {
                    unit: 'in',
                    format: 'letter',
                    orientation: 'portrait',
                    hotfixes: ['px_scaling', 'page_breaks_handling', 'legacy']
                }
            };

            setTimeout(() => {
                html2pdf().set(options).from(element).save();
            }, 500);
        };
    </script>
</body>
</html>