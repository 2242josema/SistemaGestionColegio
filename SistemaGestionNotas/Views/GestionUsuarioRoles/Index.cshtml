@model IEnumerable<SistemaGestionNotas.Models.GestionUsuarioRoles>

@{
    ViewData["Title"] = "Administrar Roles de Usuarios";
}

<div class="card shadow border-0">
    <div class="card-header bg-light py-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div>
                <h4 class="mb-0 text-primary">
                    <i class="fas fa-users-cog me-2"></i>@ViewData["Title"]
                </h4>
                <small class="text-muted ms-1">Universidad Tech</small>
            </div>

        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">

                <table id="usersRolesTable" class="table table-striped table-hover" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th class="d-none d-lg-table-cell">ID de Usuario</th>
                            <th>Email</th>
                            <th>UserName</th>
                            <th>Roles Asignados</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="d-none d-lg-table-cell"><span class="font-monospace">@user.UserId</span></td>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td>
                                    
                                    @if (user.Roles.Any())
                                    {
                                        @string.Join(", ", user.Roles)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin roles</span>
                                    }
                                </td>
                                <td class="text-center">
                                   
                                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-primary btn-sm" title="Gestionar Roles">
                                        <i class="fas fa-user-tag me-1"></i> Gestionar Roles Usuario
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No hay usuarios para administrar roles actualmente.
            </div>
        }
    </div>
    <div class="card-footer text-muted">
        Total de usuarios: @Model.Count()
    </div>
</div>


@section Scripts {

    <script>
        $(document).ready(function () {
            $('#usersRolesTable').DataTable({
                "dom": '<"row mb-3"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },

                "columnDefs": [
                    { "orderable": false, "targets": 4 },
                    { "searchable": false, "targets": 4 },
                    { "visible": false, "targets": 0 }
                ]
            });
        });
    </script>
}