@model SistemaGestionNotas.ViewModels.IngresoCalificacionesViewModel

@{
    ViewData["Title"] = "Ingreso de Notas";
}

<div class="card shadow border-0">
    <div class="card-header bg-light py-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            
            <div>
                <h4 class="mb-1 text-primary">
                    <i class="fas fa-clipboard-check me-2"></i>@ViewData["Title"]
                </h4>
                <h6 class="mb-0 fw-bold text-dark">Curso: @Model.NombreCurso</h6>
            </div>
            
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
        </div>
    </div>
    <form asp-action="GuardarNotasPorCurso" method="post">
        <div class="card-body">
            <input type="hidden" asp-for="CursoId" />
            <input type="hidden" asp-for="NombreCurso" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre del Alumno</th>
                            <th>Nota Parcial 1 (15 pts)</th>
                            <th>Nota Parcial 2 (15 pts)</th>
                            <th>Nota Zona (35 pts)</th>
                            <th>Nota Examen (35 pts)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.CalificacionesAlumnos.Count; i++)
                        {
                            <tr>
                                <td class="align-middle">
                                    <input type="hidden" asp-for="CalificacionesAlumnos[i].CalificacionId" />
                                    <input type="hidden" asp-for="CalificacionesAlumnos[i].AlumnoId" />
                                    <input type="hidden" asp-for="CalificacionesAlumnos[i].NombreAlumno" />
                                    @Model.CalificacionesAlumnos[i].NombreAlumno
                                </td>
                                <td>
                                    <input asp-for="CalificacionesAlumnos[i].NotaParcialUno" class="form-control" type="number" min="0" max="15" />
                                </td>
                                <td>
                                    <input asp-for="CalificacionesAlumnos[i].NotaParcialDos" class="form-control" type="number" min="0" max="15" />
                                </td>
                                <td>
                                    <input asp-for="CalificacionesAlumnos[i].NotaZona" class="form-control" type="number" min="0" max="35" />
                                </td>
                                <td>
                                    <input asp-for="CalificacionesAlumnos[i].NotaExamen" class="form-control" type="number" min="0" max="35" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light text-end">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-2"></i>Guardar Calificaciones
            </button>
        </div>
    </form>
</div>