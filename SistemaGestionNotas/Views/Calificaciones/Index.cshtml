@model List<SistemaGestionNotas.ViewModels.ProfesorCursoViewModel>

@{
    
    ViewData["Title"] = ViewData["Title"] ?? "Cursos";
    var titulo = ViewData["Title"];
}

<div class="card shadow border-0">
    <div class="card-header bg-light py-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div>
                <h4 class="mb-0 text-primary">
                    <i class="fas fa-chalkboard-teacher me-2"></i>@ViewData["Title"]
                </h4>
                <small class="text-muted ms-1">Universidad Tech</small>
            </div>
            
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table id="calificacionesCursosTable" class="table table-striped table-hover" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Curso</th>
                            <th>Sección</th>
                            <th>Carrera</th>
                            <th class="d-none d-lg-table-cell">Ciclo</th>
                            <th class="d-none d-xl-table-cell">Profesor</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var curso in Model)
                        {
                            <tr>
                                <td>@curso.CodigoCurso</td>
                                <td>@curso.NombreCurso</td>
                                <td>@curso.Seccion</td>
                                <td>@curso.NombreCarrera</td>
                                <td class="d-none d-lg-table-cell">@curso.Ciclo</td>
                                <td class="d-none d-xl-table-cell">@curso.NombreProfesor</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        @if (User.IsInRole("Administrador") || User.IsInRole("Profesor"))
                                        {
                                            <a class="btn btn-warning btn-sm" asp-action="CargarNotasPorCurso" asp-route-cursoId="@curso.CursoId" title="Gestionar Notas">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        <a class="btn btn-info btn-sm text-white" asp-action="DetallesCurso" asp-route-cursoId="@curso.CursoId" title="Ver Detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                       
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No se encontraron cursos para mostrar.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>

    <script>
       
        $(document).ready(function () {
            $('#calificacionesCursosTable').DataTable({
                "dom": '<"row mb-3"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                }
            });
        });

        
        async function exportTableToPDF(reportTitle, tableID, filename = 'ReporteDeCursosAsignados') {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({ orientation: 'landscape', unit: 'mm', format: 'a4' });
            const universityName = "Universidad Tech";

            doc.setFontSize(18);
            doc.text(reportTitle, doc.internal.pageSize.getWidth() / 2, 20, { align: 'center' });
            doc.setFontSize(12);
            doc.text(universityName, doc.internal.pageSize.getWidth() / 2, 28, { align: 'center' });

           
            const finalHead = [['Código', 'Curso', 'Sección', 'Carrera', 'Ciclo', 'Profesor']];
            const body = [];

            const table = $('#' + tableID).DataTable();
            table.rows({ search: 'applied' }).data().each(function (row) {
                 const cells = row.map(cell => {
                    const tempDiv = document.createElement('div');
                    tempDiv.innerHTML = cell;
                    return tempDiv.innerText;
                });
              
                body.push(cells.slice(0, 6));
            });

            doc.autoTable({
                head: finalHead,
                body: body,
                startY: 40,
                theme: 'grid',
                styles: { fontSize: 9 },
            });
            doc.save(filename + ".pdf");
        }
    </script>
}